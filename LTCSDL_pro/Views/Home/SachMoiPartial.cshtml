<link  href="~/Asset/css/templatemo_style.css" rel="stylesheet" type="text/css"/>
@using LTCSDL_pro.Models;
@model List<Sach>

@{
    foreach (var item in Model)
    {
        <div style="width:100%; "  class="templatemo_product_box">

            <h1>@item.TenSach  <span>(@item.TacGia.TenTacGia)</span></h1>
            <img  src="~/Asset/img/@item.AnhBia" style="height:120px; width:100px" alt="image" />
            <div class="product_info">
                <h3>@item.GiaBan vnđ</h3>
                <div class="buy_now_button"><a href="subpage.html">Buy Now</a></div>
                <div class="detail_button"><a href="/BookShop/Details/@item.MaSach">Chi Tiết</a></div>
                <div class="mua_button"><a href="#"></a>thêm vào giỏ hàng </div>
            </div>
             <div class="mota">
                 <h2>@item.MoTa 
                    
                 </h2>
             </div>
            <div class="cleaner">&nbsp;</div>
        </div>
        <div class="cleaner_with_height">&nbsp;</div>
    }
}